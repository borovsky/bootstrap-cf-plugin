---
name: cf-<%= name %>-services
director_uuid: <%= director_uuid %>
releases:
- name: cf-services-release
  version: latest

# Do not change this property, it will be completely overwritten; 'bosh diff' requires at least 1 network
networks:
- name: services
  type: manual
  subnets:
  - range: 10.10.4.0/24
    name: default_unused
    reserved:
    - 10.10.4.2 - 10.10.4.9
    static:
    - 10.10.4.10 - 10.10.4.200
    gateway: 10.10.4.1
    dns:
    - 10.10.0.2  # amazon has only 1 DNS server for the whole VPC at x.x.0.2

properties:
  domain: <%= domain %>

  template_only:
    aws:
      access_key_id: <%= aws_access_key_id %>
      secret_access_key: <%= aws_secret_access_key %>
      availability_zone: <%= availability_zone %>
      subnet_ids:
        services: <%= subnet_id "services" %>
